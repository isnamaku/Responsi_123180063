<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardElevation="6dp"
    app:cardUseCompatPadding="true"
>

    <RelativeLayout
        android:id="@+id/KasusItem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:background="@drawable/gradient_bggreen">

        <TextView
            android:id="@+id/tvTanggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Tanggal"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_marginTop="5dp"
            android:layout_marginStart="15dp"
            android:textColor="@color/teal_700"
            android:layout_marginLeft="15dp" />


        <LinearLayout
            android:id="@+id/linear1"
            android:layout_below="@id/tvTanggal"
            android:layout_toRightOf="@id/tvTanggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:layout_marginStart="14dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/tvTanggal">
            <TextView
                android:id="@+id/tvTerkonfirmasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Terkonfirmasi"
                android:textSize="13sp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tvSembuh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sembuh"
                android:textSize="13sp"
                android:layout_weight="1" />
            <TextView
                android:id="@+id/tvMeningal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Meninggal"
                android:textSize="13sp"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear2"
            android:layout_below="@id/tvTanggal"
            android:layout_toRightOf="@id/linear1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:layout_marginStart="14dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/linear1">

            <TextView
                android:id="@+id/etTerkonfirmasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Terkonfirmasi"
                android:textSize="13sp"
                android:layout_weight="1" />
            <TextView
                android:id="@+id/etSembuh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sembuh"
                android:textSize="13sp"
                android:layout_weight="1" />
            <TextView
                android:id="@+id/etMeningal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Meninggal"
                android:textSize="13sp"
                android:layout_weight="1" />

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
